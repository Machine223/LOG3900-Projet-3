<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <androidx.cardview.widget.CardView
        android:id="@+id/score_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="?attr/colorPrimaryDark">

        <TextView
            android:id="@+id/score_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text= "@string/Starting_0pts"
            android:textAlignment="center"
            android:textColor="?attr/textColor"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/users_answer_counter_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_card_view"
        android:layout_alignStart="@+id/score_card_view"
        android:layout_alignEnd="@+id/score_card_view"
        android:layout_marginTop="15dp"
        android:minHeight="45dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="?attr/colorPrimaryDark">

        <LinearLayout
            android:id="@+id/guess_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="40dp"
            android:orientation="vertical" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>