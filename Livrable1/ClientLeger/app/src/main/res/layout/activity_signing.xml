<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fontFamily="sans-serif"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/signingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="40dp"
                android:text="@string/login"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alertElement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bordered_text"
                android:backgroundTint="#F1BDC2"
                android:foreground="@drawable/bordered_text"
                android:padding="10dp"
                android:textColor="#7A3A40"
                android:textSize="15sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/text_box_name_margin"
                android:text="Username"

                android:textSize="@dimen/text_bix_name_font_size" />

            <EditText
                android:id="@+id/loginUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="20"
                android:hint="@string/username_hint"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:background="@drawable/bordered_text"
                android:backgroundTint="#FFFFFF"
                android:foreground="@drawable/bordered_text"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/text_box_name_margin"
                android:text="Password"
                android:textSize="@dimen/text_bix_name_font_size" />

            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bordered_text"
                android:backgroundTint="#FFFFFF"
                android:foreground="@drawable/bordered_text"
                android:ems="20"
                android:hint="@string/password_hint"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                tools:layout_editor_absoluteX="548dp"
                tools:layout_editor_absoluteY="521dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_corners_button"
                android:text="@string/login"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="542dp"
                tools:layout_editor_absoluteY="626dp" />

            <TextView
                android:id="@+id/signingSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/sign_up"
                android:textColor="#2196F3"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="809dp"
                tools:layout_editor_absoluteY="626dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>